<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rec_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:strokeColor="@color/neon"
    app:strokeWidth="2dp"
    android:elevation="6dp"
    android:layout_marginLeft="15dp"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/base_card"
        android:background="@color/grey"
        android:padding="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/grey"
            android:src="@drawable/baseline_food_bank_24"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/card_img"
            android:paddingLeft="10dp"
            android:text="title_name"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_txt"
            android:paddingLeft="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/card_img"
            android:text="description_name"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>